@*
    Index
*@
@model IEnumerable<Film>

<h1 class="alert alert-info text-center">
    Films List
</h1>

<a asp-controller="Film" asp-action="GetCreateView" class="btn btn-success mb-1">
    Add New Film
</a>


@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(e=>e.Name)</th>
                <th>@Html.DisplayNameFor(e=>e.Genres)</th>
                <th>@Html.DisplayNameFor(e=>e.Duration)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Genres</td>
                    <td>@item.Duration min</td>
                    <td>
                        <a asp-controller="Film" asp-action="GetDetailsView"
                           asp-route-id="@item.Id" class="btn btn-outline-success" title="Details"><i class="bi bi-list-ul"></i></a>

                        <a asp-controller="Film" asp-action="GetEditView"
                           asp-route-id="@item.Id" class="btn btn-outline-primary" title="Edit"><i class="bi bi-pencil-square"></i></a>

                        <a asp-controller="Film" asp-action="GetDeleteView"
                           asp-route-id="@item.Id" class="btn btn-outline-danger" title="Delete"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1 class="alert alert-danger text-center">There is no data.</h1>
}

